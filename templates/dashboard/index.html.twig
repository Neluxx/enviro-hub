
{% extends 'base.html.twig' %}

{% block title %}Raspberry Pi Sensor Data{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid p-4 bg-dark text-white min-vh-100">
        {# Current Values Cards #}
        <div class="row g-3 mb-4">
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100 {{ sensor_status_class('temperature', data.temperature) }}">
                    <div class="card-body text-center">
                        <h5 class="card-title text-light">Temperature</h5>
                        <p class="display-6 fw-bold mb-0">{{ data.temperature }} °C</p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100 {{ sensor_status_class('humidity', data.humidity) }}">
                    <div class="card-body text-center">
                        <h5 class="card-title text-light">Humidity</h5>
                        <p class="display-6 fw-bold mb-0">{{ data.humidity }} %</p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100 {{ sensor_status_class('co2', data.carbonDioxide) }}">
                    <div class="card-body text-center">
                        <h5 class="card-title text-light">CO₂</h5>
                        <p class="display-6 fw-bold mb-0">{{ data.carbonDioxide ?? 'N/A' }} ppm</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center text-muted mb-4">
            <small class="text-light">Last measured: {{ data.measuredAt.format('Y-m-d H:i:s') }}</small>
            <small class="text-light">Release: {{ version }}</small>
        </div>

        <div class="d-flex justify-content-center mb-4">
            {# Time Range Buttons #}
            <div class="time-range-buttons btn-group flex-wrap" role="group" aria-label="Time range selection">
                <button type="button" class="btn btn-outline-light active" data-range="today">Today</button>
                <button type="button" class="btn btn-outline-light" data-range="week">Last Week</button>
            </div>
        </div>

        {# Charts Grid #}
        <div class="row g-4">
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm bg-dark border-secondary">
                    <div class="card-body">
                        <h5 class="card-title text-light">Temperature</h5>
                        <div class="chart-wrapper">
                            <canvas id="temperatureChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="card shadow-sm bg-dark border-secondary">
                    <div class="card-body">
                        <h5 class="card-title text-light">Humidity</h5>
                        <div class="chart-wrapper">
                            <canvas id="humidityChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="card shadow-sm bg-dark border-secondary">
                    <div class="card-body">
                        <h5 class="card-title text-light">CO₂ Level</h5>
                        <div class="chart-wrapper">
                            <canvas id="co2Chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation@3.0.1/dist/chartjs-plugin-annotation.min.js"></script>
    <script src="{{ asset('js/dashboard.js') }}"></script>
{% endblock %}
