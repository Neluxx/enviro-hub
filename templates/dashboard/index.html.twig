
{% extends 'base.html.twig' %}

{% block title %}Raspberry Pi Sensor Data{% endblock %}

{% block body %}
    <div class="container-fluid p-4 bg-dark text-white min-vh-100"
         data-controller="dashboard"
         data-dashboard-node-uuid-value="{{ nodeUuid }}"
         data-dashboard-home-identifier-value="{{ homeIdentifier }}">
        {# Current Values Cards #}
        <div class="row g-3 mb-4">
            <div class="col-12 col-md-4">
                <a href="#temperature-chart" class="text-decoration-none">
                    <div class="card h-100 {{ sensor_status_class('temperature', data.temperature) }}" style="cursor: pointer;">
                        <div class="card-body text-center">
                            <h5 class="card-title">Temperature</h5>
                            <p class="display-6 fw-bold mb-0">{{ data.temperature }} °C</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-12 col-md-4">
                <a href="#humidity-chart" class="text-decoration-none">
                    <div class="card h-100 {{ sensor_status_class('humidity', data.humidity) }}" style="cursor: pointer;">
                        <div class="card-body text-center">
                            <h5 class="card-title">Humidity</h5>
                            <p class="display-6 fw-bold mb-0">{{ data.humidity }} %</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-12 col-md-4">
                <a href="#co2-chart" class="text-decoration-none">
                    <div class="card h-100 {{ sensor_status_class('co2', data.carbonDioxide) }}" style="cursor: pointer;">
                        <div class="card-body text-center">
                            <h5 class="card-title">CO₂</h5>
                            <p class="display-6 fw-bold mb-0">{{ data.carbonDioxide ?? 'N/A' }} ppm</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="d-flex justify-content-center mb-4">
            {# Time Range Buttons #}
            <div class="time-range-buttons btn-group flex-wrap" role="group">
                <button type="button"
                        class="btn btn-outline-light active"
                        data-dashboard-target="button"
                        data-range="-12 hours"
                        data-action="click->dashboard#changeRange">-12h</button>
                <button type="button"
                        class="btn btn-outline-light"
                        data-dashboard-target="button"
                        data-range="-24 hours"
                        data-action="click->dashboard#changeRange">-24h</button>
                <button type="button"
                        class="btn btn-outline-light"
                        data-dashboard-target="button"
                        data-range="-7 days"
                        data-action="click->dashboard#changeRange">-7d</button>
                <button type="button"
                        class="btn btn-outline-light"
                        data-dashboard-target="button"
                        data-range="-14 days"
                        data-action="click->dashboard#changeRange">-14d</button>
            </div>
        </div>

        {# Charts Grid #}
        <div class="row g-4">
            <div class="col-12" id="temperature-chart">
                <div class="card shadow-sm bg-dark border-secondary">
                    <div class="card-body">
                        <h5 class="card-title text-light">Temperature</h5>
                        <div class="chart-wrapper">
                            {{ render_chart(tempChart, {
                                'id': 'temperatureChart',
                                'data-action': 'chartjs:connect->dashboard#onChartConnect'
                            }) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12" id="humidity-chart">
                <div class="card shadow-sm bg-dark border-secondary">
                    <div class="card-body">
                        <h5 class="card-title text-light">Humidity</h5>
                        <div class="chart-wrapper">
                            {{ render_chart(humidityChart, {
                                'id': 'humidityChart',
                                'data-action': 'chartjs:connect->dashboard#onChartConnect'
                            }) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12" id="co2-chart">
                <div class="card shadow-sm bg-dark border-secondary">
                    <div class="card-body">
                        <h5 class="card-title text-light">CO₂ Level</h5>
                        <div class="chart-wrapper">
                            {{ render_chart(co2Chart, {
                                'id': 'co2Chart',
                                'data-action': 'chartjs:connect->dashboard#onChartConnect'
                            }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center text-muted mt-4">
            <small class="text-light">{{ version }}</small>
            <small class="text-light">{{ data.measuredAt.format('Y-m-d H:i:s') }}</small>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
