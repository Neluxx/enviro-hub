
{% extends 'base.html.twig' %}

{% block title %}{{ home.title }} - Nodes{% endblock %}

{% block body %}
<div class="container-fluid p-4 bg-dark text-white min-vh-100">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/" class="btn btn-outline-light btn-sm mb-3">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
                Back to Homes
            </a>
            <h1 class="display-5 fw-bold text-white">{{ home.title }} Nodes</h1>
        </div>
    </div>

    {% if nodes is empty %}
    <div class="row">
        <div class="col-12">
            <div class="card bg-dark border-secondary shadow-sm">
                <div class="card-body text-center py-5">
                    <h3 class="text-white mb-2">No Nodes Found</h3>
                    <p class="text-muted">This home has no nodes configured yet.</p>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="row g-3">
        {% for node in nodes %}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a href="/{{ home.identifier }}/{{ node.uuid }}" class="text-decoration-none">
                <div class="card h-100 bg-dark border-secondary shadow-sm hover-card" style="cursor: pointer;">
                    <div class="card-body text-center">
                        <h5 class="card-title text-white mb-0">{{ node.title }}</h5>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
    {% endif %}
</div>
{% endblock %}
