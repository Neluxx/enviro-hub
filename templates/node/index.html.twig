{% extends 'base.html.twig' %}

{% block title %}{{ home.title }} - Nodes{% endblock %}

{% block body %}
    <div class="container-fluid p-4 bg-dark text-white min-vh-100">
        <div class="container-lg">
            {% if nodes is empty %}
                <div class="row">
                    <div class="col-12">
                        <div class="card bg-dark border-secondary shadow-sm">
                            <div class="card-body text-center py-5">
                                <h3 class="text-white mb-2">No Nodes Found</h3>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row g-3">
                    {% for node in nodes %}
                        <div class="col-12 col-sm-6 col-lg-4">
                            <a href="/{{ home.identifier }}/{{ node.uuid }}" class="text-decoration-none">
                                <div class="card h-100 bg-dark border-secondary hover-card" style="cursor: pointer;">
                                    <div class="card-body text-center">
                                        <h4 class="card-title text-white mb-2">{{ node.title }}</h4>
                                        {% set data = sensorData[node.uuid] %}
                                        {% if data %}
                                            <div class="small text-white">
                                                <div class="mb-0">
                                                    <span class="text-white">{{ data.temperature }}Â°C</span>
                                                    <span class="mx-1">|</span>
                                                    <span class="text-white">{{ data.humidity }}%</span>
                                                    <span class="mx-1">|</span>
                                                    <span class="text-white">{{ data.carbonDioxide }} ppm</span>
                                                </div>
                                                <div class="text-white">
                                                    {{ data.measuredAt.format('Y-m-d H:i') }}
                                                </div>
                                            </div>
                                        {% else %}
                                            <p class="text-white small mb-0">No data available</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
